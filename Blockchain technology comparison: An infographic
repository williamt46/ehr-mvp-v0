    <!-- CHART.JS LOGIC -->
    <script>
        // --- UTILITY: Label Wrapping Function (16 char limit) ---
        function wrapLabel(label) {
            const limit = 16;
            if (label.length <= limit) return label;
            
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= limit) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- GLOBAL CHART CONFIG ---
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748B';
        
        // Tooltip Callback for Multiline Labels
        const tooltipPlugin = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // --- CHART 1: RADAR CHART (Attributes) ---
        // Justification: Radar charts are excellent for comparing two entities across multiple qualitative variables.
        const ctxRadar = document.getElementById('radarChart').getContext('2d');
        const radarLabels = ['HIPAA/GDPR Compliance', 'Transaction Speed', 'Cost Efficiency', 'Decentralization', 'Scalability'];
        const processedRadarLabels = radarLabels.map(wrapLabel);

        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: processedRadarLabels,
                datasets: [
                    {
                        label: 'Permissioned (Hyperledger)',
                        data: [9, 9, 9, 4, 8],
                        fill: true,
                        backgroundColor: 'rgba(79, 70, 229, 0.2)', // Indigo
                        borderColor: '#4F46E5',
                        pointBackgroundColor: '#4F46E5',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#4F46E5'
                    },
                    {
                        label: 'Public (Ethereum)',
                        data: [5, 4, 3, 10, 4],
                        fill: true,
                        backgroundColor: 'rgba(6, 182, 212, 0.2)', // Cyan
                        borderColor: '#06B6D4',
                        pointBackgroundColor: '#06B6D4',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#06B6D4'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: false,
                scales: {
                    r: {
                        angleLines: { color: '#E2E8F0' },
                        grid: { color: '#E2E8F0' },
                        pointLabels: {
                            font: { size: 11, weight: '600' },
                            color: '#1E293B'
                        },
                        suggestedMin: 0,
                        suggestedMax: 10
                    }
                },
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: tooltipPlugin
                }
            }
        });

        // --- CHART 2: BAR CHART (Throughput) ---
        // Justification: Simple bar chart clearly shows the massive magnitude difference in TPS.
        const ctxThroughput = document.getElementById('throughputChart').getContext('2d');
        const tpLabels = ['Ethereum (Public)', 'Hyperledger Fabric'];
        const processedTpLabels = tpLabels.map(wrapLabel);

        new Chart(ctxThroughput, {
            type: 'bar',
            data: {
                labels: processedTpLabels,
                datasets: [{
                    label: 'Transactions Per Second (TPS)',
                    data: [15, 3500], // Data from Lacson et al / Rohini
                    backgroundColor: [
                        'rgba(6, 182, 212, 0.7)', // Cyan for Eth
                        'rgba(79, 70, 229, 0.8)'  // Indigo for HL
                    ],
                    borderColor: [
                        '#06B6D4',
                        '#4F46E5'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y', // Horizontal bar for better label reading
                animation: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        type: 'logarithmic', // Log scale needed due to massive difference
                        title: { display: true, text: 'TPS (Log Scale)' }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: tooltipPlugin
                }
            }
        });

        // --- CHART 3: STACKED BAR (Cost) ---
        // Justification: Stacked bar shows composition of costs (Setup vs Operational) over time.
        const ctxCost = document.getElementById('costChart').getContext('2d');
        const costLabels = ['Public Blockchain', 'Permissioned Consortium'];
        const processedCostLabels = costLabels.map(wrapLabel);

        new Chart(ctxCost, {
            type: 'bar',
            data: {
                labels: processedCostLabels,
                datasets: [
                    {
                        label: 'Initial Setup Cost',
                        data: [1000, 25000], // Public is low setup, Permissioned is high setup
                        backgroundColor: '#CBD5E1', // Gray
                    },
                    {
                        label: 'Transaction/Gas Fees (1M Ops)',
                        data: [50000, 500], // Public high opex, Permissioned near zero
                        backgroundColor: '#E11D48', // Red for high cost warning
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: false,
                scales: {
                    x: { stacked: true },
                    y: { 
                        stacked: true,
                        title: { display: true, text: 'Estimated Cost ($ USD)' }
                    }
                },
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: tooltipPlugin
                }
            }
        });

    </script>
    
    <!-- 
    Data Choice Summary:
    1. Radar Chart: Chosen to visualize the multi-dimensional trade-offs (Compliance vs Speed vs Decentralization).
    2. Horizontal Bar (Log Scale): Chosen for TPS because the difference (15 vs 3500) is too large for a linear scale.
    3. Stacked Bar: Chosen to highlight the difference between CapEx (Setup) and OpEx (Gas Fees).
    -->

